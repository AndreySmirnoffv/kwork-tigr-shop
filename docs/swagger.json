{
  "openapi": "3.0.0",
  "info": {
    "title": "Tigr Shop API",
    "version": "1.0.0",
    "description": "API для регистрации, входа, проверки токенов и получения товаров"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Локальный API сервер"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Регистрация нового пользователя",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "phone", "password"],
                "properties": {
                  "email": { "type": "string", "example": "user@example.com" },
                  "phone": { "type": "string", "example": "+79998887766" },
                  "password": { "type": "string", "example": "securePassword123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно зарегистрирован",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": { "type": "string" },
                        "phone": { "type": "string" },
                        "userId": { "type": "string" }
                      }
                    },
                    "accessToken": { "type": "string" },
                    "refreshToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "409": { "description": "Пользователь уже существует" },
          "500": { "description": "Ошибка регистрации пользователя" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Авторизация пользователя",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["password"],
                "properties": {
                  "email": { "type": "string", "example": "user@example.com" },
                  "phone": { "type": "string", "example": "+79998887766" },
                  "password": { "type": "string", "example": "securePassword123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешный вход",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": { "type": "string" },
                        "phone": { "type": "string" },
                        "userId": { "type": "string" },
                        "accessToken": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Email или телефон и пароль обязательны" },
          "401": { "description": "Неверный пароль или пользователь не найден" },
          "500": { "description": "Ошибка на сервере" }
        }
      }
    },
    "/auth/token-check": {
      "get": {
        "summary": "Проверка валидности access/refresh токена",
        "tags": ["Auth"],
        "security": [
          { "bearerAuth": [] },
          { "cookieAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Токен действителен",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Access token действителен" },
                    "canRefresh": { "type": "boolean", "example": true }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Недействительный или отсутствующий токен",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": { "type": "boolean", "example": false },
                    "message": { "type": "string", "example": "Токены недействительны" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/last-products": {
      "post": {
        "summary": "Получить последние товары из указанных категорий",
        "tags": ["Products"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categories": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["sneakers", "tshirts"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешный ответ с товарами",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sanitized": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "article": { "type": "string" },
                          "brand": { "type": "string" },
                          "title": { "type": "string" },
                          "category": { "type": "string" },
                          "gender": { "type": "string" },
                          "price": { "type": "string", "example": "12999" },
                          "description": { "type": "string" },
                          "isNew": { "type": "boolean" },
                          "isHit": { "type": "boolean" },
                          "isCollab": { "type": "boolean" },
                          "originalTitle": { "type": "string" },
                          "isFirstPhoto": { "type": "boolean" },
                          "isSecondPhoto": { "type": "boolean" },
                          "isThirdPhoto": { "type": "boolean" },
                          "isFourthPhoto": { "type": "boolean" },
                          "isFifthPhoto": { "type": "boolean" },
                          "isSixthPhoto": { "type": "boolean" },
                          "photoName": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Некорректные данные запроса"
          },
          "500": {
            "description": "Ошибка сервера при получении товаров"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "accessToken"
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Маршруты для аутентификации"
    },
    {
      "name": "Products",
      "description": "Маршруты для получения товаров"
    }
  ]
}
